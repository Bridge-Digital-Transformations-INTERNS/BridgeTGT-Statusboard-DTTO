FROM node:24-alpine AS builder
WORKDIR /app
COPY bridgetgt-frontend/package*.json ./
RUN npm install
COPY bridgetgt-frontend/ .
RUN npm run build

# Stage 2: Serve with Nginx
FROM nginx:alpine

# Copy build output
COPY --from=builder /app/dist /var/www/statusboard/dist

# Copy your custom Nginx config
COPY bridgetgt-frontend/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
